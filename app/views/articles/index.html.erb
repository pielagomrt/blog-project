<div class="column col-sm-9" id="main">
  <div class="padding">
    <div class="full col-sm-9">
      <div class="col-sm-12" id="stories">  
        <div class="page-header text-muted divider">
          BLOGS
        </div>
      </div>   
      <% @articles.each do |article| %>
        <div class="row">    
          <div class="col-sm-10">
            <h4>
              <span class="label label-default">
                Article No.  <%= article.id %>
              </span>
            </h4>
            <h3>
              <%= article.heading.upcase %>
            </h3>
            <h3>
              <small>
                <%= article.subheading %>
              </small>
            </h3>
            <h4>
              <span class="text-muted"><small><i>
                <%= article.created_at.strftime("%B %e, %Y at %l:%M %p UTC") %>
                â€¢ Updated <%= time_ago_in_words(article.updated_at) %> ago
              </span></i></small></br></br>
                <%= link_to "Read More", article_show_path(article), class: 'btn btn-primary' %>
            </h4>
          </div>
          
          <div class="col-sm-2">
            <%= link_to article_delete_path(article), class: 'btn btn-danger pull-right', method: :delete, data: { confirm: 'Delete this article?' } do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %>

            <%= link_to article_edit_path(article), class: 'btn btn-warning pull-right' do %>
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %>   
          </div> 
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>

